// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String?
  role     String?
}

model Letters {
  id                  Int     @id @default(autoincrement())
  no_letter           Int
  date_letter         String
  date_entry          String
  letter_type         String
  regarding           String
  attachment          String
  letter_form         String
  status              String
  characteristic      String
  attachment_file_url String
  letter_out          Boolean
}
